# Environment Variables for SomethingToDo App
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control

# RapidAPI Configuration (REQUIRED for Events)
# Get your API key from https://rapidapi.com/real-time-events-search/api/real-time-events-search
RAPIDAPI_KEY=your_rapidapi_key_here

# Mapbox Configuration (REQUIRED for Maps)
# Get your access token from https://account.mapbox.com/access-tokens/
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# OpenAI Configuration (REQUIRED for AI Chat)
# Get your API key from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Google Maps API Key (DISABLED - Using Mapbox only)
# GOOGLE_MAPS_API_KEY=disabled

# Firebase Configuration
FIREBASE_PROJECT_ID=your_firebase_project_id_here
FIREBASE_API_KEY=your_firebase_api_key_here

# Stripe Configuration (OPTIONAL for Premium Features)
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key_here

# Development settings
DEBUG_MODE=false
ENABLE_MOCK_DATA=false